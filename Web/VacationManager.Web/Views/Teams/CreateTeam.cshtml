@using VacationManager.Web.ViewModels.Teams;

@model CreateTeamInputModel

<div class="row">
    <div class="col-md-12">
        <h1 style="text-align: center; color: lightgray">Създай свой отбор</h1>
        <form class="mx-auto half-width col-5" enctype="multipart/form-data" method="post" asp-controller="Teams" asp-action="CreateTeam">
            <div class="top-border-line primary-separator"></div>

            <div class="form-group">
                <label asp-for="Name" class="suls-text-color">Име на отбора</label>
                <input asp-for="Name" class="form-control" placeholder="Отбор...">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <input hidden asp-for="LeaderId" class="form-control" value="@Model.LeaderId">

            <div class="top-border-line primary-separator"></div>

            <button type="submit" class="btn forum-add-bg-color">Създай отбор</button>
        </form>
    </div>
</div>